{
	"name": "libkmodule",
	"version": "0.2.26",
	"author": "Skynet Labs",
	"description": "helper library to interact with the skynet kernel from a module",
	"main": "dist/index.js",
	"type": "module",
	"types": "dist/index.d.js",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"/dist"
	],
	"scripts": {
		"deps": "npm install libskynet@latest",
		"eslint": "eslint src --fix",
		"prettier": "prettier --write .",
		"lint": "npm run deps && npm run prettier && npm run eslint",
		"test": "tsc && tsc --project tsconfig.test.json && node ./dist-test/test.js",
		"prepare": "npm run lint && npm run deps && npm run test"
	},
	"devDependencies": {
		"@types/node": "^17.0.23",
		"@typescript-eslint/eslint-plugin": "^5.19.0",
		"eslint": "^8.13.0",
		"prettier": "^2.6.2"
	},
	"dependencies": {
		"libskynet": "^0.0.53"
	}
}
