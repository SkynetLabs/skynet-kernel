{
	"name": "kernel-test-suite-module",
	"version": "0.0.1",
	"description": "skynet kernel module to test the kernel's APIs",
	"main": "index.js",
	"scripts": {
		"eslint": "eslint src --fix",
		"prettier": "prettier --write .",
		"lint": "npm run prettier && npm run eslint",
		"webpack": "webpack --config webpack.config.js --mode=production",
		"make-build-script": "tsc --project tsconfig.build.json",
		"move-dist": "mv dist-build/build.js dist-build/build.mjs",
		"build-prep": "npm run webpack && npm run make-build-script && npm run move-dist",
		"build": "npm run build-prep && node ./dist-build/build.mjs dev",
		"deploy": "npm run lint && npm run build-prep && node ./dist-build/build.mjs prod"
	},
	"author": "David Vorick",
	"license": "MIT",
	"devDependencies": {
		"@types/read": "^0.0.29",
		"@typescript-eslint/eslint-plugin": "^5.18.0",
		"eslint": "^8.13.0",
		"libkerneldev": "^0.0.41",
		"prettier": "^2.6.2",
		"read": "^1.0.7",
		"ts-loader": "^9.2.8",
		"typescript": "^4.6.3",
		"webpack": "^5.71.0",
		"webpack-cli": "^4.9.2"
	},
	"dependencies": {
		"libkernel": "^0.1.30",
		"libkmodule": "^0.2.4"
	}
}
